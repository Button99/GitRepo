<div class="addNumber jumbotron d-lg-flex" id="table">
    <form method="POST" action="/user/search">
        <label for="username">Insert username: </label>
        <input type="text" id="username" name="username" />
        <input type="submit" value="Submit"></input>
    </form>
</div>
<div>
    <table class="table table-bordered" >
        <thead>
            <tr class="success">
                <th>Repository Name</th>
                <th>Link</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>{{this.name}}</td>
                <td><a href={{this.html_url}}>{{this.html_url}}</a></td>
            </tr>
            {{/each}}
       </tbody>
    </table>
</div>